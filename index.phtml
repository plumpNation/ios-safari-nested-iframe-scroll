<!doctype html>
<html>
    <head>
        <title>Nested scroll test</title>
    </head>
    <style media="screen">
        * {
            box-sizing: border-box;
        }

        html,
        body {
            margin: 0;
            padding: 0;
        }

        body {
            background: red;
        }

        html,
        body,
        .content-container,
        iframe {
            height: 100%;
            width: 100%;
        }

        iframe {
            border: 0;
            display: block;
        }

        .content-container {
            position: relative;
            padding: 0;
            margin: 0;
        }
    </style>
    <body>
        <div class="content-container">
            <iframe src="content-iframe.phtml"></iframe>
        </div>
    </body>
</html>
